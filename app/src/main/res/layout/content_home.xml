<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="valentinc.nesthermostat.HomeActivity"
    tools:showIn="@layout/app_bar_home">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="°C"
        android:textSize="23sp"
        tools:layout_editor_absoluteX="225dp"
        tools:layout_editor_absoluteY="29dp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="80dp"
        android:layout_height="41dp"
        android:text="21.8"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginStart="84dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="280dp"
        android:layout_height="19dp"
        android:text="Lescar - 11.2 °C - Pluie"
        android:textAlignment="center"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="57dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="87%"
        android:textSize="22sp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/progressBar" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="33%"
        android:textSize="22sp"
        android:layout_above="@+id/progressBar"
        android:layout_alignStart="@+id/progressBar2" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        android:layout_marginStart="39dp"
        android:indeterminate="false"
        android:max="100"
        android:progress="87" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_toEndOf="@+id/textView2"
        android:max="100"
        android:progress="33" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_marginTop="30dp"
        android:background="?attr/colorPrimary"
        android:text="Chauffage"
        android:textAlignment="center"
        android:textSize="22sp"
        android:layout_below="@+id/progressBar"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:background="?attr/colorPrimary"
        android:text="Chauffage"
        android:textAlignment="center"
        android:textSize="22sp"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="25sp"
        android:layout_height="25sp"
        app:srcCompat="@drawable/temp"
        android:layout_alignBottom="@+id/textView9"
        android:layout_toStartOf="@+id/textView4" />

    <SeekBar
        android:id="@+id/seekBar2"
        android:layout_width="175sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:max="30"
        android:progress="20"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/imageView3" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textSize="24sp"
        android:layout_alignBottom="@+id/seekBar2"
        android:layout_toStartOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="°C"
        android:textSize="15sp"
        android:layout_alignBottom="@+id/textView11"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="75sp"
        android:layout_height="25sp"
        android:text="1h25"
        android:textAlignment="center"
        android:textSize="22sp"
        android:layout_alignBaseline="@+id/textView12"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temps restant"
        android:layout_above="@+id/textView13"
        android:layout_alignEnd="@+id/textView13"
        android:layout_marginEnd="10dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_marginTop="44dp"
        android:background="?attr/colorPrimary"
        android:text="Capteurs"
        android:textAlignment="center"
        android:textSize="22sp"
        android:layout_below="@+id/textView13"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView16"
        android:layout_alignStart="@+id/seekBar2"
        app:srcCompat="@drawable/sensor" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView16">

    </ListView>


</RelativeLayout>
